<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  	<!-- SpringMVC核心控制器 -->
	<servlet>
	  <servlet-name>cms</servlet-name>
	  <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>cms</servlet-name>
	    <url-pattern>/</url-pattern>
	</servlet-mapping>
  
    <!-- 字符过滤器 -->
	<filter>  
	    <filter-name>CharacterEncodingFilter</filter-name>  
	    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>  
	    <init-param>  
	        <param-name>encoding</param-name>  
	        <param-value>utf-8</param-value>  
	    </init-param>  
	</filter>  
	<filter-mapping>  
	    <filter-name>CharacterEncodingFilter</filter-name>  
	    <url-pattern>/*</url-pattern>  
	</filter-mapping>
	
	<!-- 一般常量过滤器 -->
	<filter>
		<filter-name>CommonConstantFilter</filter-name>
		<filter-class>top.duyt.web.filter.CommonConstantFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CommonConstantFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- 分页参数过滤 -->
	<filter>  
	    <filter-name>PageParamFilter</filter-name>  
	    <filter-class>top.duyt.web.filter.PageParamFilter</filter-class>  
	    <init-param>  
	        <param-name>pageSize</param-name>  
	        <param-value>8</param-value>  
	    </init-param>  
	</filter>  
	<filter-mapping>  
	    <filter-name>PageParamFilter</filter-name>  
	    <url-pattern>/*</url-pattern>  
	</filter-mapping>

	<!-- sitemesh -->
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- spring工厂 -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:beans.xml</param-value>
	</context-param>
	
	<!-- 实现openSessionInView -->
	<!-- 注意，本过滤器要放在struts过滤器的前面，否则会失效 -->
	<filter>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
</web-app>
